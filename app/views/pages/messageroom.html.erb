<div class="container mt-4">
    <div class="card">
        <div class="card-body">

        <h1>Message room</h1>

        <div class="card p-3">
            <div id="message_container" style="overflow-y: scroll; height:400px;">
                <% @messages.each do |message| %>
                    
                    <div class="card p-2 mb-2 <%= message.user.admin? ? 'bg-dark text-light' : 'bg-light text-dark text-end' %>">
                        <div>
                            <%= message.user.admin %>
                            <%= message.content %>
                        </div>    
                    </div>
                <% end %>
                
                <div id="message_holder">
                </div>
            </div>

            

            <%= form_for @message, remote: true do |f| %>
            <div class="input-group mb-3">
                <%= f.text_field :user_id, value: current_user.id %>
                <%= f.text_field :content, class:"form-control", placeholder:"Type here..." %>
                <%= f.submit class:"btn btn-outline-secondary" %>
            </div>
            <% end %>
        </div>

        </div>
    </div>
</div>