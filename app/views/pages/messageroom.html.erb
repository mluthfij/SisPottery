<div class="container mt-4">
    <div class="card">
        <div class="card-body">

        <h1>Message room</h1>

        <div class="card p-3">
            <div id="message_container" style="overflow-y: scroll; height:400px;">
                <div id="message_holder"></div>
            </div>

            <%= form_for @message, remote: true do |f| %>
            <div class="input-group mb-3">
                <%= f.text_field :content, class:"form-control", placeholder:"Type here..." %>
                <%# <input type="text"  aria-label="Recipient's username" aria-describedby="button-addon2"> %>
                <%= f.submit class:"btn btn-outline-secondary" %>
                <%# <button  type="button" id="button-addon2">Button</button> %>
            </div>
            <% end %>
        </div>

        </div>
    </div>
</div>