<% unless params[:action] == 'new' %>
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
  <div class="carousel-indicators">
    <% obj.each_with_index do |cover, index| %>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= index %>" class="<%= index == 1 ? 'active' : '' %>" aria-current="true" aria-label="Slide 1"></button>
    <% end %>
  </div>
  <div class="carousel-inner">
    <% if obj.attached? %>
      <% obj.each_with_index do |cover, index| %>
          <div class="carousel-item <%= index == 1 ? 'active' : '' %>">
            <%= image_tag cover.variant(loader: { page: nil }, coalesce: true, resize_to_limit: [500, 500]), class:"bg-light w-100 carousel-fit" %>
          <%# <div class="carousel-caption d-none d-md-block">
              <h5>First slide label</h5>
              <p>Some representative placeholder content for the first slide.</p>
          </div> %>
          </div>
      <% end %>
    <% else %>
      <div class="carousel-item">
        <img src="https://img.freepik.com/free-photo/woman-showing-pinterest-icon_53876-40589.jpg?w=2000" class="card-img-top" alt="bg-light w-100 carousel-fit">
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<% end %>
