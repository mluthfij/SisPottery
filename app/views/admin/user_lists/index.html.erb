<div class="container-fluid px-4">
    <h2 class="mt-4">User list</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm table-hover">
            <thead>
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">phone/wa</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% @users.order(id: :desc).where(admin: :false).each do |user| %>
                    <tr>
                        <td>
                            <%= user.username %>
                        </td>
                        <td>
                            <%= user.firstname %> <%= user.lastname %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.phone ? '+62' : '' %><%= user.phone %>
                            <%= user.wa_phone ? ' / +62' : '' %><%= user.wa_phone %>
                        </td>
                        <td>
                            <%= link_to 'Edit', edit_admin_user_list_path(user), class:'btn btn-primary btn-sm' %> | 
                            <%= link_to 'Delete', admin_user_list_path(user), method: :delete, data: { confirm: "are you sure wan't to delete #{user.username}?"}, class:'btn btn-danger btn-sm' %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

