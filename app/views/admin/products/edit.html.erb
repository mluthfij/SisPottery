<div class="container-fluid px-4">
  <h1 class="text-center mt-4 mb-4">Editing Product</h1>
  <div>
    <div class="card mb-3 bg-light">
      <div class="card-body">
        <%= link_to 'View', admin_product_path(@product), class:"btn btn-lg btn-dark" %>
        <%= link_to 'Delete', admin_product_path(@product), class:"btn btn-lg btn-dark", method: :delete, data: { confirm: "Are you sure?" } %>
        <%= link_to 'Back', :back, class:"float-end btn btn-lg btn-dark" %>
      </div>
    </div>
    <div class="mb-4">
      <%= render 'form', product: @product %>
    </div>
  </div>
</div>

