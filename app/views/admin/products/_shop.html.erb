<div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
    <% obj.order(id: :desc).each do |product| %>
        <div class="col">
            <div class="card h-100">
                <div class="dropdown dropstart zindex end-0 m-2">
                    <button class="btn btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Edit", edit_admin_product_path(product), class:"dropdown-item" %></li>
                        <li><%= link_to "Delete", admin_product_path(product), class:"dropdown-item", method: :delete, data: { confirm: 'Are you sure?' } %></li>
                    </ul>
                </div>            
                <%= link_to product do %>
                    <img src="https://img.freepik.com/free-photo/woman-showing-pinterest-icon_53876-40589.jpg?w=2000" class="card-img-top" alt="...">
                <% end %>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to product.name, product %></h5>
                    <h6 class="card-subtitle mb-2 text-muted">Rp. <%= product.price %></h6>
                    <p class="card-text"><%= product.description %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>
