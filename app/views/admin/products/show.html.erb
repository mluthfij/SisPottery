<div class="container-fluid px-4">
  <div class="mt-4">
    <div class="card mb-3 bg-light">
      <div class="card-body">
        <%= link_to 'Edit', edit_admin_product_path(@product), class:"btn btn-lg btn-outline-dark" %>
        <%= link_to 'Delete', admin_product_path(@product), class:"btn btn-lg btn-outline-dark", method: :delete, data: { confirm: "Are you sure?" } %>
        <%= link_to 'Exit', admin_products_path, class:"btn btn-lg btn-outline-dark float-end" %>
      </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col sticky-container">
        <div class="sticky-2">
          <%= render 'admin/products/carousel_product' %>
        </div>
      </div>
      <div class="col">
        <div>
          <strong class="fs-4"><%= @product.name %></strong>
        </div>
        <div class="my-2 mb-2">
          <strong class="fs-3">Rp<%= @product.price %></strong>
        </div>

        <div>
          <%= @product.quantity %>
        </div>

        <div>
          <p class="justify-text">
            <%= @product.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
