<%= form_with(model: chatroom) do |form| %>
                <main>
                    <div class="container mb-4">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4"><%= params[:action] == 'new' ? 'New Chatroom' : 'Edit Chatroom' %></h3></div>
                                    <div class="card-body">
                                      <% if chatroom.errors.any? %>
                                        <div id="error_explanation">
                                          <h2><%= pluralize(chatroom.errors.count, "error") %> prohibited this chatroom from being saved:</h2>

                                          <ul>
                                            <% chatroom.errors.each do |error| %>
                                              <li><%= error.full_message %></li>
                                            <% end %>
                                          </ul>
                                        </div>
                                      <% end %>
                                        <%# <div class="small mb-3 text-muted"></div> %>
                                        <form>
                                            <div class="form-floating mb-3">
                                                <%= form.text_field :topic, class:"form-control", placeholder:"Ask admin" %>
                                                <%= form.label :topic, "Type here...", for:"inputText" %>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <%# <a class="small" href="login.html">Return to login</a> %>
                                                <%# <a class="small"></a> %>
                                                <%# <a class="btn btn-primary" href="login.html">Reset Password</a> %>
                                                <%= link_to 'Back', chatroom_path(current_user.chatrooms.first), class:"small" %>
                                                <%= form.submit class:"btn btn-primary" %>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <%# <div class="small"><a href="register.html">Need an account? Sign up!</a></div> %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>

<% end %>