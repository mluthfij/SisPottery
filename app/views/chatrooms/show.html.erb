<div class="container mt-4 mb-4">
    <div class="card">
            <%#  %>
            <div class="position-absolute top-0 end-0 m-1">

                <div class="dropdown dropstart">
                    <button class="btn btn-dark" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <%= link_to 'Edit', edit_chatroom_path(@chatroom), class:"dropdown-item" %>
                        </li>
                        <li>
                            <%= link_to 'Delete Chat', @chatroom, method: :delete, data: { confirm: 'Are you sure?' }, class:"dropdown-item" %>
                        </li>
                    </ul>
                </div>            

            </div>
            <%#  %>
        <div class="card-body">

            <h1>Message room: <%= @chatroom.topic %></h1>

            <div class="card bg-light p-3">
                <div id="message_container">
                    <div id="message_holder">
                        <%= render @messages %>
                    </div>
                </div>

                <%= form_for @message, remote: true do |f| %>
                <div class="input-group mb-3 p-2 bg-dark rounded">
                    <%= f.hidden_field :chatroom_id, value: @chatroom.id %>
                    <%= f.hidden_field :user_id, value: current_user.id %>
                    <%= f.text_field :content, class:"form-control", placeholder:"Type here..." %>
                    <%# <%= f.submit class:"btn btn-success" %>
                </div>
                <% end %>
            </div>

        </div>
    </div>
</div>