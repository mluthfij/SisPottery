<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Change your password</h3>
                            </div>
                            <div class="card-body">
                              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                                <%= render "devise/shared/error_messages", resource: resource %>
                                <%= f.hidden_field :reset_password_token %>

                                  <% if @minimum_password_length %>
                                    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                                  <% end %>
                                <div class="form-floating mb-3">
                                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", id:"inputPassword", type:"Password", placeholder:"example" %>
                                  <%= f.label :password, "New password", for:"inputPassword" %>
                                </div>

                                <div class="form-floating mb-3">
                                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputPassword", type:"Password", placeholder:"example" %>
                                  <%= f.label :password_confirmation, "Confirm new password", for:"inputPassword" %>
                                </div>

                                <div class="actions">
                                  <%= f.submit "Change my password", class:"btn btn-primary btn-block" %>
                                </div>
                              <% end %>


                            </div>
                            <div class="card-footer text-center py-3">
                                <div class="small">
                                  <%= render "devise/shared/links" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
