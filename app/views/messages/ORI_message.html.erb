<div class="card bg-dark text-white p-2 mb-2">
    <p>
        <% if message.user.avatar.present? %>
            <%= image_tag(message.user.avatar.variant(resize_to_fill: [40, 40]), class: "rounded-circle me-2") %>
        <% else %>
            <%= image_tag("http://www.familylore.org/images/2/25/UnknownPerson.png", class: "rounded-circle me-2", width: 40) %>
        <% end %>
        <span class="fw-bold"><%= message.user.username %>: </span><%= message.content %>
    </p>
</div>
