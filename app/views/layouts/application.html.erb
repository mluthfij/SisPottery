                <div id="turbo_flash" data-turbo="true">
                    <% if flash.any? && flash.now %>
                        <%= render "layouts/turboalert" %>
                    <% end %>
                </div>
                <%# end alert %>

                <%= yield %>
                </main>
                <%# end of main content %>
                <%# start of footer %>
                <%= render 'layouts/foot' %>
                <%# end of footer %>
            </div>
        </div>
    </body>
