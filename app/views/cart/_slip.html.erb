<% @cart.orderables.each do |orderable| %>
    
<!-- Modal -->
<div class="modal fade" id="modalSlip<%= orderable.id %>" tabindex="-1" aria-labelledby="modalDescLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
<!-- Modal -->
    <% if orderable.images.attached? %>
        <% orderable.images.each do |image| %>
            <span data-turbo="false">
                <%= link_to image.blob.url do %>
                    <%= image_tag(image, class:'w-100') %>
                <% end %>
            </span>
        <% end %>
    <% end %>

<!-- Modal -->
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<% end %>